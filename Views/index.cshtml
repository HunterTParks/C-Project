@{
  Layout = "Shared/_Layout";
}

<div class = "container">
  <p>
    Welcome to "Building your address book"!
  </p>

  <p><a href = "/new">Make a new contact</a></p>

  <h2>Here are your current contacts</h2>

  @if(@Model.Count <= 0)
  {
    <p>You currently have no contacts!</p>
  } else {
    @foreach(var Contact in Model)
    {
      <p><a href = "/contacts/@Contact.GetId()"</a>@Contact.GetName()</p>
    }
  }
  @* @foreach(car contact in Model)
